  <center><h2>Sign up</h2></center>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <%= f.text_field :full_name, :placeholder => 'Full Name' %>
    <%= f.email_field :email, :autofocus => true, :placeholder => 'Email address' %>
    <%= f.password_field :password, :placeholder => 'Password' %>
    <%= f.password_field :password_confirmation, :placeholder => 'Password confirmation' %>
    <%= f.label 'Pick your school: ' %><br>
    <!-- :school_id is foreign key in Users table,
         :School.all specifies what in the School table to include in the dropdown menu
         :id is primary key in the School table
         :name is what attribute of the School table will display in the menu-->
    <%= f.collection_select(:school_id, School.all, :id, :name ) %><br><br>
    <%= f.submit "Sign up",:class=>'btn btn-primary' %>
