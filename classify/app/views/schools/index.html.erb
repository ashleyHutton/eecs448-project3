<p id="notice"><%= notice %></p>

<h2>
  Schools
  <button type="button" class="btn btn-sm btn-default"><%= link_to 'New School', new_school_path %></button>
</h2>

<div class = "table">
  <table class = "table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @schools.each do |school| %>
        <tr>
          <td><%= school.name %></td>
          <td><%= link_to 'Show', school %></td>
          <td><%= link_to 'Edit', edit_school_path(school) %></td>
          <!--<td><%= link_to 'Destroy', school, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
