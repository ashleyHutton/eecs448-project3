<!DOCTYPE html>
  <center>
    <h1> Welcome <i><%= current_user.full_name %> </i></h1>
  </center>

  <h3> Personal Information </h3>
  <h5> Name: <%= current_user.full_name %> </h5>
  <h5> My School: <%= link_to  current_user.school.name, current_user.school %> </h5>

  <%= form_for(:user) do |f| %>

    <%= f.collection_select(:school_id, School.all, :id, :name ) %>

    <div class="actions">
      
      <%= f.submit "Change School", :class => "btn btn-sm btn-default" %>
    </div>
  <% end %>

  <h5> Scores Made: <%= Score.where(creator_id: current_user.id).count %></h5>


  <h3> Account Details </h3>
  <h5> Email: <%= current_user.email %> </h5>
  <h5> Last time logged in: <%= current_user.last_sign_in_at.month %> / <%= current_user.last_sign_in_at.day %> / <%= current_user.last_sign_in_at.year %>
  <h5><%= link_to "Edit Account Info", edit_user_registration_path %> </h5>

  <%= render 'myscores' %>

</html>
