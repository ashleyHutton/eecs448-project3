<p id="notice"><%= notice %></p>

<h2>
  Courses
  <button type="button" class="btn btn-sm btn-default"><%= link_to 'New Course', new_course_path %></button>
</h2>

<div class = "table">
  <table class = "table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>School</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @courses.each do |course| %>
        <tr>
          <td><%= course.name %></td>
          <td><%= course.school.name if course.school%></td>
          <td><button type="button" class="btn btn-sm btn-default"><%= link_to 'Show', course %></button></td>
        <!--  <<td><%= link_to 'Edit', edit_course_path(course) %></td> -->
          <!--<td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
