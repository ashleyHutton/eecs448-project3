<p id="notice"><%= notice %></p>

<div class="container">
  <h2>
    <i><%= @course.name %></i> at <i><%= link_to  @course.school.name, @course.school %></i>
    <a class="btn btn-default" href="<%= courses_path %>" role="button">Back to Courses</a><br>

  </h2>


  <table class = "table table-striped">
    <thead>
    <tr>
      <th><center>Difficulty</center></th>
      <th><center>Workload</center></th>
      <th><center>Likeability</center></th>
      <th>Comment</th>
      <!--<th> Score </th>-->
      <th colspan="3"></th>
    </tr>
  </thead>

  <% @course.scores.each do |score| %>
    <tr>

      <td> <center><%= score.difficulty_rating %> </center></td>
      <td> <center> <%= score.workload_rating %> </center></td>
      <td> <center><%= score.likeability_rating %></center> </td>
      <td> <%= truncate(score.comment, :length => 30) %> </td>
      <% if score.creator_id == current_user.id %>
        <td><button type="button" class="btn btn-sm btn-default"><%= link_to 'View/Edit', score %></button>

      <% else %>
      <td> </td>
      <% end %>
      </td>
    </tr>
    <% end %>


  </table>
</div>
