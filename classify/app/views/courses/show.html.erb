<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @course.name %>
</p>

<p>
  <strong>School:</strong>
  <%= @course.school.name %>
</p>
<table class = "table table-striped">
  <thead>
  <tr>
    <th><center>Difficulty</center></th>
    <th><center>Workload</center></th>
    <th><center>Likeability</center></th>
    <th>Comment</th>
    <!--<th> Score </th>-->
    <th colspan="3"></th>
  </tr>
</thead>

<% @course.scores.each do |score| %>
  <tr>

    <td> <center><%= score.difficulty_rating %> </center></td>
    <td> <center> <%= score.workload_rating %> </center></td>
    <td> <center><%= score.likeability_rating %></center> </td>
    <td> <%= truncate(score.comment, :length => 30) %> </td>
    <td> <center><%=  link_to 'View', score %> </center> </td>
  </tr>
  <% end %>


</table>
<%= link_to 'Edit', edit_course_path(@course) %> |
<%= link_to 'Back', courses_path %>
